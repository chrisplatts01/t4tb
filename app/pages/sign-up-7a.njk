{% extends "layouts/layout.njk" %}

{% import "macros/section.njk" as section %}
{% import "macros/form.njk" as form %}

{% block content %}
  <section class="panel panel--progress">

    {{ section.header(
        title = "Sign up to the study",
        info = "<a id=\"my-data-open\" class=\"modal-open\" href=\"#my-data\">What happens to my data?</a>" | safe,
        show_progress_bar = false,
        show_progress_steps = false,
        duration = 15
      )
    }}

    <article>
      <h1>Due to some of the information you have provided we recommend that you visit your GP prior to starting the exercise programme and discuss this with them.</h1>
      <p>Please download and print the letter for GPs <a href="#">available here</a>.</p>
      {% call form.form("t4tb", "sign-up-7b.html", "sign-up-7c.html", previous_label = "I will return later", next_label = "I will continue") %}
      {% endcall %}
    </article>

    {{ section.exit_link( info = "<a id=\"exit-home-open\" class=\"modal-open\" href=\"#exit-home\">Cancel and return to home page</a>") }}

  </section>
{% endblock %}

