{% extends "layouts/layout.njk" %}

{% import "macros/section.njk" as section %}
{% import "macros/form.njk" as form %}

{% block content %}
  <section class="panel panel--progress">

    {{ section.header(
        title = "Register for the study",
        info = "<a id=\"why-important-open\" class=\"modal-open\" href=\"#why-important\">Why is the important?</a>" | safe,
        duration = 15,
        step = 4,
        steps = 5
      )
    }}

    <article>
      <h1>Your date of birth</h1>
      {% call form.form("t4tb", "register-3.html", "register-5.html") %}
        {{ form.text("dob", "Please enter your date of birth", "date", changeMonth = true, changeYear = true, required=true) }}
      {% endcall %}
    </article>

    {{ section.exit_link( info = "<a id=\"exit-home-open\" class=\"modal-open\" href=\"#exit-home\">Cancel and return to home page</a>") }}

  </section>
{% endblock %}
