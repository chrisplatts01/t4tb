{% extends "layouts/layout.njk" %}

{% import "macros/section.njk" as section %}
{% import "macros/form.njk" as form %}

{% block content %}
  <section class="panel panel--progress">

    {{ section.header(
        title = "Register for the study",
        info = "<a id=\"why-important-open\" class=\"modal-open\" href=\"#why-important\">Why is the important?</a>" | safe,
        duration = 15,
        step = 2,
        steps = 5
      )
    }}

    <article>
      <h1>Please enter your address</h1>
      {% call form.form("t4tb", "register-1-html", "register-3.html", previous_label = "Go back", next_label = "Look up address") %}
        {{ form.text2("", "lookup-house-number", "House name or number", "text", "", "lookup-postcode", "Postcode", "text", "", required=true) }}
      {% endcall %}
    </article>

    {{ section.exit_link( info = "<a id=\"exit-home-open\" class=\"modal-open\" href=\"#exit-home\">Cancel and return to home page</a>" | safe ) }}

  </section>
{% endblock %}
