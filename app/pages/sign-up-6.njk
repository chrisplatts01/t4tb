{% extends "layouts/layout.njk" %}

{% import "macros/section.njk" as section %}
{% import "macros/form.njk" as form %}

{% block content %}
  <section class="panel panel--progress">

    {{ section.header(
        title = "Sign up to the study",
        info = "<a id=\"my-data-open\" class=\"modal-open\" href=\"#my-data\">What happens to my data?</a>" | safe,
        duration = 15,
        step = 6,
        steps = 9
      )
    }}

    <article>
      <h1>How many falls have you had within the last 12 months?</h1>
      {% call form.form("t4tb", "sign-up-5.html", "sign-up-7.html") %}
        {{ form.radios("fall", "", ["0", "1", "2", "More than 2"], required=true) }}
      {% endcall %}
      <p class="why-important"><a id="why-important-open" class="modal-open" href="#why-important">Why is this important?</a></p>
    </article>

    {{ section.footer( info = "<a id=\"exit-home-open\" class=\"modal-open\" href=\"#exit-home\">Cancel and return to home page</a>" | safe ) }}

  </section>
{% endblock %}

