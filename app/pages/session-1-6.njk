{% extends "layouts/layout.njk" %}

{% import "macros/section.njk" as section %}
{% import "macros/form.njk" as form %}

{% block content %}
  <section class="panel panel--progress">

    {{ section.header(
        title = "Session 1",
        info = "<a id=\"why-exercise-open\" class=\"modal-open\" href=\"#why-exercise\">Why is exercise important?</a>" | safe,
        duration = 40,
        step = 6,
        steps = 6,
        bg_color = "blue"
      )
    }}

    <article>
      <h1>Session done<br>Well done!</h1>
      {% call form.form("t4tb", "session-1-3.html", "session-2-start.html") %}
        {{ form.slider_1("enjoy-session", "Did you enjoy the session?", ["Not at all", "Not really", "It was OK", "It was good", "Loved it!"], "", "", required=true) }}
        <hr>
        {{ form.slider_1("how-easy", "How easy did you find it?", ["Very difficult", "Difficult", "OK", "Easy", "Very easy"], "", "", required=true) }}
      {% endcall %}
    </article>

    {{ section.exit_link( info = "<a id=\"exit-dashboard-open\" class=\"modal-open\" href=\"#exit-dashboard\">Cancel and return to dashboard</a>") }}

  </section>
{% endblock %}
