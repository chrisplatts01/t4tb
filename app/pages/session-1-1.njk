{% extends "layouts/layout.njk" %}

{% import "macros/section.njk" as section %}
{% import "macros/form.njk" as form %}
{% import "macros/timer.njk" as timer %}

{% block content %}
  <section class="panel panel--progress">

    {{ section.header(
        title = "Session 1",
        info = "<a id=\"why-exercise-open\" class=\"modal-open\" href=\"#why-exercise\">Why is exercise important?</a>" | safe,
        duration = 20,
        step = 1,
        steps = 6,
        bg_color = "blue"
      )
    }}

    <article>
      <h1>Schedule</h1>
      {% call form.form("t4tb", "session-1-start.html", "session-1-2.html") %}
        <div id="session-select">
          {{ form.radio("warm-up", "Warm up", value = "Warm up", checked = "checked", duration = 10, required=true) }}
          <hr>
          {{ form.checkboxes("exercise", "Select your exercise preference (choose two)", ["Pilates", "Movement and dance", "Focus on your arms", "Focus on your legs", "General fitness"], [12, 15, 8, 11, 15], required=true, validation="data-rule-mincheck=2 data-rule-maxcheck=2") }}
          <hr>
          {{ form.radio("cool-down", "Cool down", value = "Cool down", checked = "checked", duration = 10, required=true) }}
          <hr>
        </div>
        <p>Total session time</p>
        <div id="session-total" class="duration">20 mins {{ timer.timer(minutes = 20, color = "#1aab98") }}</div>
        <hr>
      {% endcall %}
    </article>

    {{ section.footer( info = "<a id=\"exit-dashboard-open\" class=\"modal-open\" href=\"#exit-dashboard\">Cancel and return to dashboard</a>" | safe ) }}

  </section>
{% endblock %}
