{#
========================================
Form: Basic skeleton for T4TB form with
      markup for form action buttons
      and div to flag form errors
========================================
#}
{% import "macros/timer.njk" as timer %}

{% macro form(
    id = "t4tb",
    previous = "",
    next = "#",
    previous_label = "Go back",
    next_label = "Continue"
  )
%}
<form id="{{ id }}" method="get" action="{{ next }}">
  <div id="form-errors" class="form-errors hidden">
    <p>There was a problem with your submission.
    <br>The errors have been highlighted below.</p>
  </div>

  {{ caller() }}

  <div class="form-actions">
    {% if previous %}<a class="button button--back secondary" href="{{ previous }}">{{ previous_label }}</a>{% endif %}
    <button class="button button--next" type="submit">{{ next_label }}</button>
  </div>
</form>
{% endmacro %}

{#
========================================
Field: Text input - note if type="date"
       a JQuery UI date widget is used
========================================
#}
{% macro text(
    name  = "FIELD_NAME",
    label = "FIELD_LABEL",
    type  = "text",
    value = "",
    required = "",
    validation = "",
    changeMonth = false,
    changeYear = false
  )
%}
<div class="form-field-group form-field-group--text">
  <div class="form-field form-field--text">
    <label for="{{ name }}">{{ label }}</label>
    {% if type == "date" %}
    <input id="{{ name }}" name="{{ name }}" type="text" value="{{ value }}" placeholder="dd/mm/yyyy" pattern="\d{2}\/\d{2}\/\d{4}" data-type="date" data-change-month="{{ changeMonth }}" data-change-year="{{ changeYear }}" {% if required %}required{% endif %} {{ validation }}>
    {% else %}
    <input id="{{ name }}" name="{{ name }}" type="{{ type }}" value="{{ value }}" {% if required %}required{% endif %} {{ validation }} {{ validation }}>
    {% endif %}
  </div>
</div>
{% endmacro %}

