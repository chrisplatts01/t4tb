{#
========================================
Field: Checkbox with optional time icon
========================================
#}
{% macro checkbox(
    name = "FIELD_NAME",
    label = "FIELD_LABEL",
    value ="",
    duration = 0,
    checked = "",
    required = "",
    validation = ""
  )
%}
<div class="form-field-group form-field-group--checkbox">
  <div class="form-field form-field--checkbox ">
    <input id="{{ name }}" name="{{ name }}" type="checkbox" value="{{ value }}" {{ checked }} {% if required %}required{% endif %} {{ validation }}>
    <label for="{{ name }}">{{ label }}</label>
    {% if duration %}
      <div class="duration">{{ duration }} mins {{ timer.timer(duration, "#ccc2ba") }}</div>
    {% endif %}
  </div>
</div>
{% endmacro %}

{#
========================================
Field group: Checkboxes with optional
             time icons
========================================
#}
{% macro checkboxes(
    name ="NAME",
    label ="LABEL",
    values =["OPTION-1"],
    durations = [0],
    inline = false,
    required = "",
    validation = ""
  )
%}
<div class="form-field{% if inline %}-inline{% endif %}-group form-field-group--checkbox">
  {% if label %}<label>{{ label }}</label>{% endif %}

  {% for value in values %}
  <div class="form-field form-field--checkbox">
    <input id="{{ name }}-{{ value | lower | replace(" ", "-") }}" name="{{ name }}" type="checkbox" value="{{ value }}" {% if required %}required{% endif %} {{ validation }}>
    <label for="{{ name }}-{{ value | lower | replace(" ", "-") }}">{{ value }}</label>
    {% if durations[loop.index0] %}
      <div class="duration">{{ durations[loop.index0] }} mins {{ timer.timer(durations[loop.index0], "#ccc2ba") }}</div>
    {% endif %}
  </div>
  {% endfor %}
</div>
{% endmacro %}

